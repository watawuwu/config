<redpen-conf lang="ja">
    <symbols>
        <symbol name="LEFT_PARENTHESIS" value="(" invalid-chars="（" />
        <symbol name="RIGHT_PARENTHESIS" value=")" invalid-chars="）" />

    </symbols>
    <validators>
        <validator name="InvalidExpression"/>
        <validator name="SentenceLength">
            <property name="max_len" value="100"/>
        </validator>
        <validator name="InvalidSymbol"/>
        <validator name="KatakanaEndHyphen"/>
        <validator name="KatakanaSpellCheck"/>
        <validator name="SectionLength">
             <property name="max_num" value="1500"/>
        </validator>
        <validator name="ParagraphNumber"/>
        <validator name="Contraction"/>
        <validator name="SuccessiveWord"/>
    </validators>
</redpen-conf>
